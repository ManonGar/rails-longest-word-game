<div class="container">
  <h1>New Game</h1>
  <div class="letters">
  <% @letters.each do |letter| %>
  <div class="letter">
   <%= letter %>
  </div>
  <% end %>
</div>
</div>

<p>What is the longest word you can find?</p>
<form action="/score" method="post">
  <input type="text" name="answer" class="word">
  <input type="submit" value="Play!" class="btn">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
</form>

<%= link_to "Play again", new_path %>
